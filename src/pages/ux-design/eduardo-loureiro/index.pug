include /assets/pug/meta
include /assets/pug/header
include /assets/pug/episode
include /assets/pug/player
include /assets/pug/tabs
include /assets/pug/js

+meta(
  'Eduardo Loureiro, Episódio 3 — Movimento UX',
  'Sócio gerente DesignThinkers Brasil. Co-criação, transição de agências, empreendedorismo.',
  'http://movimentoux.com/ux-design/eduardo-loureiro/'
)

body(data-page='episode')

  +header('on', '', '')

  #barba-wrapper
    .barba-container
      +episode(
        'Eduardo Loureiro',
        'Sócio gerente DesignThinkers Brasil.',
        'Co-criação, transição de agências, empreendedorismo.',
        '03',
        '03-eduardo-loureiro.jpg',
        '',
        '-inside'
      )

      +player('episodio-3-eduardo-loureiro')

      section.episode-content
        +tabs

        .tab.on#intro
          include intro.pug

        .tab#transcricao
          include transcricao.pug

//- don't forget js
+js
