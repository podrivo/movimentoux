include /assets/pug/meta
include /assets/pug/header
include /assets/pug/episode
include /assets/pug/player
include /assets/pug/tabs
include /assets/pug/js

+meta(
  'Fabrício Teixeira, Episódio 5 — Movimento UX',
  'Diretor de UX na R/GA. UX em agências, arquitetura de informação,UX em outros países.',
  'http://movimentoux.com/ux-design/fabricio-teixeira/'
)

body(data-page='episode')

  +header('on', '', '')

  #barba-wrapper
    .barba-container
      +episode(
        'Fabrício Teixeira',
        'Diretor de UX na R/GA.',
        'UX em agências, arquitetura de informação,UX em outros países.',
        '05',
        '05-fabricio-teixeira.jpg',
        '',
        '-inside'
      )

      +player('episodio-05-fabricio-teixeira')

      section.episode-content
        +tabs

        .tab.on#intro
          include intro.pug

        .tab#transcricao
          include transcricao.pug

//- don't forget js
+js
