include /_assets/pug/meta
include /_assets/pug/header
include /_assets/pug/episode
include /_assets/pug/player
include /_assets/pug/tabs
include /_assets/pug/js

+meta(
  'Koji Pereira, Episódio 4 — Movimento UX',
  'Designer de Produto no Google. Design digital, prototipação, UX em outros países.',
  'http://movimentoux.com/ux-design/koji-pereira/'
)

body(data-page='episode')

  +header('on', '', '')

  #barba-wrapper
    .barba-container
      +episode(
        'Koji Pereira',
        'Designer de Produto no Google.',
        'Design digital, prototipação, UX em outros países.',
        '04',
        '04-koji-pereira.jpg',
        '',
        '-inside'
      )

      +player('ep4-kojipereira')

      section.episode-content
        +tabs

        .tab.on#intro
          include intro.pug

        .tab#transcricao
          include transcricao.pug

//- don't forget js
+js
