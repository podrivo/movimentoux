mixin episode(speaker, description, keywords, number, image, url, variantInside)
  section(class= variantInside).intro-episode
    if variantInside == '-inside'
      .episode-cover
        .cover
          img(src='/img/' + image alt='Fotografia de ' + speaker)
      .text
        h2.title= speaker
        p.keywords= description
        p.keywords= keywords
      span.number= number
    else
      .episode-cover
        .cover
          a(href= url title='Ir para epis√≥dio').play-badge
            img(src='/img/' + image alt='Fotografia de ' + speaker)
            svg(src='/img/play.svg')
      .text
        h2.title= speaker
        p.keywords= description
        p.keywords= keywords
      span.number= number
