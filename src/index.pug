include pug/meta
include pug/header
include pug/social
include pug/js

+meta(
  'Movimento UX',
  'Movimento UX é um podcast de entrevistas sobre o universo de Experiência do Usuário.',
  'http://movimentoux.com/'
)

body

  +header('', 'on', '')

  #barba-wrapper
    .barba-container
      article.intro-text
        p.eyebrow Temporada 2
        h1.title UX <br> Research
        p Nov, 2018 — Conversas sobre pesquisa para produto. 

      +social('-home')

      section.intro-episode
        .cover-wrap
          .cover
            a(href='paola-sales/' title='Ir para episódio').play-badge
              img(src='/img/19-foto-paola-sales.jpg' alt='Fotografia de Paola Sales')
              svg(src='/img/play.svg')
        .text
          span.eyebrow Novo episódio
          h2.title Paola<br>Sales
          p.keywords Head de User Studies no Descomplica.
          p.keywords Pesquisa humanizada, empatia e criação de área.
        span.number 19

