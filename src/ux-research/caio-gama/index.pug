include /pug/meta
include /pug/header
include /pug/episode
include /pug/player
include /pug/link-alt
include /pug/link-ad
include /pug/js
include /pug/ad

+meta(
  'Caio Gama, User Researcher no Nubank. Episódio 21 — Movimento UX. Conversas sobre pesquisa para produto. UX Research.',
  'Data & analytics, mix de técnicas de pesquisa qualitativa e quantitativa — Movimento UX é um podcast de entrevistas sobre o universo de Experiência do Usuário — Segunda Temporada. Conversas sobre pesquisa para produto. UX Research.',
  'http://movimentoux.com/ux-research/caio-gama/',
  'http://movimentoux.com/img/share-caio-gama.jpg'
)

body(data-page='episode')

  +header('', 'on', '')

  #barba-wrapper
    .barba-container
      +episode(
        'Caio Gama',
        'User Researcher no Nubank.',
        'Data & analytics, mix de técnicas de pesquisa qualitativa e quantitativa.',
        '21',
        '21-foto-caio-gama.jpg',
        '',
        '-inside'
      )

      +player('caiogama')

      section.episode-content
        ul.episode-tabs
          li.tab-item #[a(href='#intro').link.on Apresentação]
          li.tab-item #[a(href='#transcricao').link Transcrição]

        .tab.on#intro
          include intro.pug

        .tab#transcricao
          include transcricao.pug

//- last
//- but not least
+js
