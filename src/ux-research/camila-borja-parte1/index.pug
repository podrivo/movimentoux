  'http://movimentoux.com/ux-research/camila-borja-parte1/',
  'http://movimentoux.com/_assets/img/share/24-camila-borja.jpg'
)

body(data-page='episode')

  +header('', 'on', '')

  #barba-wrapper
    .barba-container
      +episode(
        'Camila Borja 01',
        'User Experience Researcher no Itaú.',
        'Capacitação em Pesquisa, Atomic Research e Gestão e organização dos aprendizados.',
        '24',
        '24-camila-borja.jpg',
        '',
        '-inside'
      )

      +player('camilaborja')

      section.episode-content
        +tabs

        .tab.on#intro
          include intro.pug

        .tab#transcricao
          include transcricao.pug

